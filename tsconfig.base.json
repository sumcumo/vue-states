{
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "es2015",
    "target": "es5",
    "lib": [
      "es2017",
      "es2016",
      "dom"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  }
}
